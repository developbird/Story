<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7"
    >
    <android.support.v7.widget.Toolbar
        android:background="@drawable/title_bg"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_back"
            android:onClick="clickToBack"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="                修改密码"

            android:textSize="20dp"
            android:textColor="#fffff0"
            android:gravity="center"
            />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#fffff0"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/user_modi_oldpassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 原  密  码: "
                android:textSize="20sp"
                android:textColor="#3B3B3B"
                android:paddingLeft="10dp"
                android:gravity="center"
                />
            <EditText
                android:layout_toRightOf="@id/user_modi_oldpassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:backgroundTint="#898989"
                android:textSize="20sp"
                android:background="@null"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#fffff0"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/user_modi_newpassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 新  密  码: "
                android:textSize="20sp"
                android:textColor="#3B3B3B"
                android:paddingLeft="10dp"
                android:gravity="center"
                />
            <EditText
                android:layout_toRightOf="@id/user_modi_newpassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:backgroundTint="#898989"
                android:textSize="20sp"
                android:background="@null"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#fffff0"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/user_modi_surepassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 重复密码: "
                android:textSize="20sp"
                android:textColor="#3B3B3B"
                android:paddingLeft="10dp"
                android:gravity="center"
                />
            <EditText
                android:layout_toRightOf="@id/user_modi_surepassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:backgroundTint="#898989"
                android:textSize="20sp"
                android:background="@null"
                />
        </RelativeLayout>
    </LinearLayout>

    <Button

        android:layout_width="330dp"
        android:layout_height="45dp"
        android:text="修改密码"
        android:textSize="20sp"
        android:textColor="#fffff0"
        android:background="#3263A3"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        />
</LinearLayout>