<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7">
    <android.support.v7.widget.Toolbar
        android:background="@drawable/title_bg"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_back"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="                个人中心"
            android:textSize="20dp"
            android:textColor="#fffff0"
            android:gravity="center"
            />
    </android.support.v7.widget.Toolbar>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_portrait"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#fffff0"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"

            >
        <TextView
            android:id="@+id/user_info_usernumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" 帐 号: "
            android:textSize="20sp"
            android:textColor="#3B3B3B"
            android:paddingLeft="10dp"
            android:gravity="center"
            />
        <TextView
            android:layout_toRightOf="@id/user_info_usernumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="12345677654"
            android:gravity="center"
            android:textSize="20sp"
            android:backgroundTint="#898989"
            />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E7E7E7"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#fffff0"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/user_info_username"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 昵 称: "
                android:textSize="20sp"
                android:textColor="#3B3B3B"
                android:paddingLeft="10dp"
                android:gravity="center"
                />
            <TextView
                android:layout_toRightOf="@id/user_info_username"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="放羊的星星"
                android:backgroundTint="#898989"
                android:gravity="center"
                android:textSize="20sp"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_arrow"
                android:onClick="clickTomodiName"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E7E7E7"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#fffff0"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/user_info_usersex"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 性 别: "
                android:textSize="20sp"
                android:textColor="#3B3B3B"
                android:paddingLeft="10dp"
                android:gravity="center"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_woman"
                android:paddingLeft="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="女"
                android:paddingLeft="90dp"
                android:gravity="center"
                android:textSize="20sp"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_arrow"
                android:onClick="clickTomodiSex"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E7E7E7"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#fffff0"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/user_info_usermail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 邮 箱: "
                android:textSize="20sp"
                android:textColor="#3B3B3B"
                android:paddingLeft="10dp"
                android:gravity="center"
                />
            <TextView
                android:layout_toRightOf="@id/user_info_usermail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="develp@163.com"
                android:backgroundTint="#898989"
                android:gravity="center"
                android:textSize="20sp"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_arrow"
                android:onClick="clickTomodiMail"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E7E7E7"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#fffff0"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/user_info_userbirth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 生 日: "
                android:textSize="20sp"
                android:textColor="#3B3B3B"
                android:paddingLeft="10dp"
                android:gravity="center"
                />
            <TextView
                android:layout_toRightOf="@id/user_info_userbirth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1993-11-01"
                android:backgroundTint="#898989"
                android:gravity="center"
                android:textSize="20sp"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_arrow"
                android:onClick="clickTomodiBirth"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E7E7E7"
            />
    </LinearLayout>



    <Button
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:text="修改密码"
        android:textSize="20sp"
        android:textColor="#fffff0"
        android:background="#3263A3"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:onClick="clickTomodiPassword"
        />
</LinearLayout>