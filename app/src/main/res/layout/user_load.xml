<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7"
    >

    <android.support.v7.widget.Toolbar
        android:background="@drawable/title_bg"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_back"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="                用户登陆"
            android:textSize="20dp"
            android:textColor="#fffff0"
            android:gravity="center"
            />
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_login"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="细说我们的故事"
        android:textColor="#A9A9A9"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp"
        android:textSize="20dp"
        />

    <RelativeLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        >
        <TextView
            android:id="@+id/load_username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" 帐 号:"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#101010"
            />
        <EditText
            android:id="@+id/load_edit_username"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/load_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            />
    </RelativeLayout>

    <RelativeLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:layout_margin="15dp"

        >
        <TextView
            android:id="@+id/load_password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" 密 码:"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#101010"

            />
        <EditText
            android:id="@+id/load_edit_userpassword"
            android:layout_toRightOf="@id/load_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:inputType="textPassword"
            />
    </RelativeLayout>

    <Button
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:text="登    录"
        android:textSize="20sp"
        android:textColor="#fffff0"
        android:background="#3263A3"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:onClick="loadToMainActivity"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="没有帐号？点击注册"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:textColor="#3263A3"
        android:onClick="loadToRegister"
        />


</LinearLayout>