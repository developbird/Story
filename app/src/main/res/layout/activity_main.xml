<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.administrator.story.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawLayout"
    android:background="#E7E7E7"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/first_toolbar"
        android:background="@drawable/title_bg"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:onClick="clickToPaneLayout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_log"
            />
            <LinearLayout
                android:background="#fffff0"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="60dp"

                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最新"
                    android:textColor="#3263A3"
                    android:background="#fffff0"
                    />
                <Button
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最热"
                    android:textColor="#fffff0"
                    android:background="#3263A3"
                    android:layout_margin="1dp"


                    />
            </LinearLayout>

        <ImageView
            android:id="@+id/main_imgTonewStory"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_edit"
            android:layout_marginLeft="50dp"
            />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E7E7E7"
        >
        <ListView
            android:id="@+id/main_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            />
    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_gravity = "start"
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="#101010"
        >

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/icon_home"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="往事杂谈"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="#fffff0"
                android:onClick="clickToMain"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/icon_mystory"
                />
            <TextView
                android:id="@+id/main_myStory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的故事"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="#fffff0"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/icon_record"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浏览记录"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="#fffff0"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/icon_mine"
                />
            <TextView
                android:id="@+id/main_userInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人信息"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="#fffff0"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/icon_setting"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统设置"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="#fffff0"
                android:onClick="clickToSystemSetting"
                />
        </LinearLayout>

        <Button
            android:layout_marginTop="170dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="退      出"
            android:textSize="20dp"
            android:textColor="#fffff0"
            android:background="#FF0000"
            android:onClick="clickToBack"
            />

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>