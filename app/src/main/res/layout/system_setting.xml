<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7"
    >
    <android.support.v7.widget.Toolbar
        android:background="@drawable/title_bg"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_back"
            android:onClick="clickToBack"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:text="设  置"
            android:textSize="20dp"
            android:textColor="#fffff0"
            android:gravity="center"
            />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#fffff0"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/system_setting_guli"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 鼓励我们"
                android:textSize="20sp"
                android:textColor="#3B3B3B"
                android:paddingLeft="10dp"
                android:gravity="center"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_arrow"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E7E7E7"
            />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#fffff0"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/system_setting_juanzhu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 捐助我们"
                android:textSize="20sp"
                android:textColor="#3B3B3B"
                android:paddingLeft="10dp"
                android:gravity="center"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_arrow"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E7E7E7"
            />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#fffff0"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/system_setting_systemmsg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 系统消息"
                android:textSize="20sp"
                android:textColor="#3B3B3B"
                android:paddingLeft="10dp"
                android:gravity="center"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_arrow"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E7E7E7"
            />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#fffff0"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/system_setting_update"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 检查更新"
                android:textSize="20sp"
                android:textColor="#3B3B3B"
                android:paddingLeft="10dp"
                android:gravity="center"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_arrow"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E7E7E7"
            />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#fffff0"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/system_setting_normalprob"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 常见问题"
                android:textSize="20sp"
                android:textColor="#3B3B3B"
                android:paddingLeft="10dp"
                android:gravity="center"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_arrow"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E7E7E7"
            />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#fffff0"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/system_setting_aboutmine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 关于我们"
                android:textSize="20sp"
                android:textColor="#3B3B3B"
                android:paddingLeft="10dp"
                android:gravity="center"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_arrow"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E7E7E7"
            />
    </LinearLayout>
</LinearLayout>